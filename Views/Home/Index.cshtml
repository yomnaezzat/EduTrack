@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row align-items-center mb-5">
        <div class="col-md-6">
            <h1 class="display-4 mb-4">Welcome to EduTrack</h1>
            <p class="lead">Your go-to platform for discovering high-quality courses and educational resources.</p>
            <p>Explore a wide range of courses or create your own to share your expertise with learners worldwide.</p>
            <div class="mt-4">
                <a asp-controller="Courses" asp-action="Index" class="btn btn-primary btn-lg me-2">Browse Courses</a>
                @if (!User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary btn-lg">Sign Up</a>
                }
                else
                {
                    <a asp-controller="Courses" asp-action="Create" class="btn btn-outline-primary btn-lg">Create Course</a>
                }
            </div>
        </div>
        <div class="col-md-6">
            <img src="\images\assets\home_page-0001 (1) - crop 2025-05-05 15-49-18.png" alt="Education Courses" class="img-fluid rounded shadow-lg" />
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <h2 class="text-center mb-4">Why Choose EduTrack?</h2>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-collection-play display-4 text-primary mb-3"></i>
                    <h3 class="card-title">Quality Courses</h3>
                    <p class="card-text">Access a wide range of high-quality courses from various categories.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-laptop display-4 text-primary mb-3"></i>
                    <h3 class="card-title">Multiple Formats</h3>
                    <p class="card-text">Learn from various content formats including PDFs, text resources, and YouTube videos.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-person-badge display-4 text-primary mb-3"></i>
                    <h3 class="card-title">Share Your Knowledge</h3>
                    <p class="card-text">Create and publish your own courses to share your expertise with others.</p>
                </div>
            </div>
        </div>
    </div>
</div>
